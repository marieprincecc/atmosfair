{% extends 'base.html.twig' %}

{% block title %}Orderdetails index{% endblock %}

{% block body %}
    <h1>Orderdetails index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>PriceTotal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for orderdetail in orderdetails %}
            <tr>
                <td>{{ orderdetail.id }}</td>
                <td>{{ orderdetail.quantity }}</td>
                <td>{{ orderdetail.priceTotal }}</td>
                <td>
                    <a href="{{ path('orderdetails_show', {'id': orderdetail.id}) }}">show</a>
                    <a href="{{ path('orderdetails_edit', {'id': orderdetail.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('orderdetails_new') }}">Create new</a>
{% endblock %}
