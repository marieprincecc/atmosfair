{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Greatness</th>
                <th>Pot</th>
                <th>Toxicity</th>
                <th>Familly</th>
                <th>Price</th>
                <th>Water</th>
                <th>Entretient</th>
                <th>PathImage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.greatness }}</td>
                <td>{{ product.pot }}</td>
                <td>{{ product.toxicity }}</td>
                <td>{{ product.familly }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.water }}</td>
                <td>{{ product.entretient }}</td>
                <td>{{ product.pathImage }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Create new</a>
{% endblock %}
