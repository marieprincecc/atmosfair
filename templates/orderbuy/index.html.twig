{% extends 'base.html.twig' %}

{% block title %}Orderbuy index{% endblock %}

{% block body %}
    <h1>Orderbuy index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Total</th>
                <th>TotalTTC <br><em>(avec livraison)</em></th>
                <th>Status</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for orderbuy in orderbuys %}
            <tr>
                <td>{{ orderbuy.id }}</td>
                <td>{{ orderbuy.total | euroPrice }}</td>
                <td>{{ orderbuy.totalTTC | euroPrice }}</td>
                <td>{{ orderbuy.status }}</td>
                <td>{{ orderbuy.date ? orderbuy.date|date('d-m-Y') : '' }}</td>
                <td>
                    <a href="{{ path('orderbuy_show', {'id': orderbuy.id}) }}">show</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
