{% extends 'base.html.twig' %}

{% block title %}Opinions index{% endblock %}

{% block body %}
    <h1>Opinions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Stars</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for opinion in opinions %}
            <tr>
                <td>{{ opinion.user.name }}</td>
                <td>
                {% if opinion.stars == "1" %}
                    <i class="fas fa-star"></i>
                    {% elseif opinion.stars == "2" %}
                     <i class="fas fa-star"></i> <i class="fas fa-star"></i>
                     {% elseif opinion.stars == "3" %}
                      <i class="fas fa-star"></i> <i class="fas fa-star"></i> <i class="fas fa-star"></i>
                      {% elseif opinion.stars == "4" %}
                       <i class="fas fa-star"></i> <i class="fas fa-star"></i> <i class="fas fa-star"></i> <i class="fas fa-star"></i>
                       {% elseif opinion.stars == "5" %}
                        <i class="fas fa-star"></i> <i class="fas fa-star"></i> <i class="fas fa-star"></i> <i class="fas fa-star"></i> <i class="fas fa-star"></i>
                {% endif %}</td>
                <td>{{ opinion.content }}</td>
                <td>
                    <a href="{{ path('opinions_edit', {'id': opinion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('opinions_new') }}">Create new</a>
{% endblock %}
