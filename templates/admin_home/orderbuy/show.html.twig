{% extends 'admin_home/base_admin.html.twig' %}

{% block title %}Orderbuy index{% endblock %}

{% block body %}
    <h1>Orderbuy index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Clients</th>
                <th>Total</th>
                <th>TotalTTC</th>
                <th>Status</th>
                <th>Date</th>
                
            </tr>
        </thead>
        <tbody>
       
            <tr>
                <td>{{ orderbuy.id }}</td>
                <td>{{ orderbuy.user.famillyName }} {{ orderbuy.user.famillyName }}</td>
                <td>{{ orderbuy.total | euroPrice}}</td>
                <td>{{ orderbuy.totalTTC | euroPrice}}</td>
                <td>{{ orderbuy.status }}</td>
                <td>{{ orderbuy.date ? orderbuy.date|date('d-m-Y') : '' }}</td>
               
            </tr>
        
        </tbody>
    </table>
   
  

    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Quantity</th>
                <th>PriceTotal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for orderdetail in orderdetails %}
            <tr>
                <td>{{  orderdetail.product.name }}</td>
                <td>{{ orderdetail.quantity }}</td>
                <td>{{ orderdetail.priceTotal | euroPrice}}</td>
                
                <td>
                  
                    <a href="{{ path('admin_orderdetails_edit', {'id': orderdetail.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  

{% endblock %}
